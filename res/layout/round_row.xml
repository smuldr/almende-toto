<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >
    <TextView 
        android:id="@+id/HomeTeam"        
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Netherlands"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="right"
        />
    <TextView
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text=" - "
        android:textSize="16sp"
        android:gravity="right"
        />
    <TextView 
        android:id="@+id/AwayTeam"        
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Korea Republic"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <ImageView
        android:src="@drawable/joker"
        android:id="@+id/Joker"
        android:layout_width="wrap_content"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        />
    <LinearLayout
        android:id="@+id/PredScore"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="5dp"
        >
	    <TextView
	        android:id="@+id/HomePrediction"
	        android:layout_width="18sp" 
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:layout_weight="0"
	        android:text="3"
	        android:textSize="16sp"
	        />
	    <TextView
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_weight="0"
	        android:text="-"
	        android:textSize="16sp"
	        />
	    <TextView
	        android:id="@+id/AwayPrediction"
	        android:layout_width="18sp" 
	        android:layout_height="wrap_content"
	        android:layout_weight="0"
	        android:text="0"
	        android:textSize="16sp"
	        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/RealScore"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:background="#FF7F7FFF"
        >
	    <TextView
	        android:id="@+id/HomeReal"
	        android:layout_width="18sp"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:layout_weight="0"
	        android:text="x"
	        android:textSize="16sp"
	        />
	    <TextView
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_weight="0"
	        android:text="-"
	        android:textSize="16sp"
	        />
	    <TextView
	        android:id="@+id/AwayReal"
	        android:layout_width="18sp" 
	        android:layout_height="wrap_content"
	        android:layout_weight="0"
	        android:text="x"
	        android:textSize="16sp"
        />
    </LinearLayout>
</LinearLayout>

